public class CaptchaAutomation {

	public static void main(String[] args) {
		FirefoxDriver driver=new FirefoxDriver();
		driver.get("http://www.harvard.edu/feedback");
		driver.findElement(By.id("edit-submitted-name"))
		                                        .sendKeys("Tester1");
		driver.findElement(By.id("edit-submitted-email"))
		                              .sendKeys("tester@gmail.com");
		driver.findElement(By.id("edit-submitted-comment"))
		                      .sendKeys("Stupid change the capthca");
		String x=driver.findElement(By.className("field-prefix"))
														.getText();
		String[] a=x.split(" ");
		int i=Integer.parseInt(a[0]);
		int j=Integer.parseInt(a[2]);
		int k=i+j;
		String str=Integer.toString(k);
		driver.findElement(By.id("edit-captcha-response"))
		                                            .sendKeys(str);
		Sleeper.sleepTightInSeconds(5);
		driver.findElement(By.id("edit-captcha-response")).submit();
		
	}

}
